{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/infrastructure/api/**/*.controller.ts"],
  "spec": {
    "outputDirectory": "src/swagger",
    "specVersion": 3,
    "spec": {
      "servers": [
        {
          "url": "http://localhost:8000/api",
          "description": "Localhost"
        }
      ]
    }
  },
  "routes": {
    "basePath": "/api",
    "routesDir": "src/infrastructure/routes",
    "middleware": "express"
  }
}
